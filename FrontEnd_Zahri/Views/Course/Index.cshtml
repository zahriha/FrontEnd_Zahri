@model IEnumerable<FrontEnd.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">List Course</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">List Course</li>
</ol>
<div>
    @if (ViewData["pesan"] != null)
    {
        @Html.Raw(ViewData["pesan"])
    }
</div>
<div class="card mb-4">

    <div class="card-body">
        <p>
            <a class="btn btn-primary btn-lg" asp-action="Create">Create New</a>
        </p>

        <p>

            <form asp-action="Index" method="get">

                <div class="input-group">
                    <div class="form-outline">
                        <input name="name" type="text" placeholder="Search" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </p>

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Credits)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Credits)
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Details"
                           asp-route-id="@item.CourseId">Details</a> &nbsp; &nbsp;
                            <a class="btn btn-primary btn-sm" asp-action="Update"
                           asp-route-id="@item.CourseId">Update</a> &nbsp; &nbsp;
                            <a class="btn btn-danger btn-sm" asp-action="Delete"
                           asp-route-id="@item.CourseId">Delete</a> &nbsp; &nbsp;
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>